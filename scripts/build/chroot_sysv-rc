## This is free software, and you are welcome to redistribute it
## under certain conditions; see COPYING for details.


set -e

# Including common functions
[ -e "${LIVE_BUILD}/scripts/build.sh" ] && . "${LIVE_BUILD}/scripts/build.sh" || . /usr/lib/live/build.sh

# Setting static variables
DESCRIPTION="Manage /usr/sbin/policy-rc.d"
USAGE="${PROGRAM} {install|remove} [--force]"

# Processing arguments and configuration files
Init_config_data "${@}"

_ACTION="${1}"
shift

# Requiring stage file
Require_stagefiles config bootstrap

policy_rcd_target_file="/usr/sbin/policy-rc.d.live-build"

case "${_ACTION}" in
	install)
		Echo_message "Configuring file /usr/sbin/policy-rc.d"

		# Checking stage file
		Check_stagefile

		# Acquire lock file
		Acquire_lockfile

		if [ -e chroot/usr/sbin/policy-rc.d ] && ! [ -e chroot/etc/alternatives/policy-rc.d ]
		then
			Echo_error "Existing policy-rc.d script does not use update-alternatives!"
			exit 1
		fi

		# Create policy-rc.d file
cat > "chroot/${policy_rcd_target_file}" << EOF
#!/bin/sh
echo "All runlevel operations denied by policy" >&2
exit 101
EOF

		chmod 0755 "chroot/${policy_rcd_target_file}"

		# Install an alternative for policy-rc.d
		Chroot chroot update-alternatives --install /usr/sbin/policy-rc.d policy-rc.d "${policy_rcd_target_file}" 1000

		# Creating stage file
		Create_stagefile
		;;

	remove)
		Echo_message "Deconfiguring file /usr/sbin/policy-rc.d"

		# Checking stage file
		Ensure_stagefile_exists

		# Acquire lock file
		Acquire_lockfile

		# Remove the live-build alternative for policy-rc.d
		Chroot chroot update-alternatives --remove policy-rc.d "${policy_rcd_target_file}"
		rm -f chroot/usr/sbin/policy-rc.d.live-build
		truncate --no-create --size=0 chroot/var/log/alternatives.log

		# Removing stage file
		Remove_stagefile
		;;

	*)
		Echo_error "Invalid action parameter: '${_ACTION}'"
		Usage --fail
		;;
esac
